<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.boyuanitsm.echinfo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".module.start.SplashAct">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--主页-->
        <activity
            android:name=".module.home.ui.MainAct"
            android:screenOrientation="portrait"></activity>
        <!--我的资料-->
        <activity
            android:name=".module.mine.ui.MineAct"
            android:screenOrientation="portrait" />
        <!--查专利-->
        <activity android:name=".module.home.ui.search.SearchPatentAct"
            android:screenOrientation="portrait"/>
        <!--消息-->
        <activity
            android:name=".module.mine.ui.MsgAct"
            android:screenOrientation="portrait" />
        <!--意见反馈-->
        <activity
            android:name=".module.mine.ui.FeedBackAct"
            android:screenOrientation="portrait" />
        <!--设置-->
        <activity
            android:name=".module.mine.ui.SettingAct"
            android:screenOrientation="portrait" />
        <!--修改资料内容-->
        <activity
            android:name=".module.mine.ui.EditAct"
            android:screenOrientation="portrait" />
        <!--分享-->
        <activity
            android:name=".module.mine.ui.ShareDialogAct"
            android:screenOrientation="portrait"
            android:theme="@style/AlertDialogStyle"/><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>