<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_act_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    style="@style/tv_14_black_bold"
                    android:text="分支机构名称"
                    android:textSize="16sp"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvName"
                    style="@style/tv_14_black_bold"
                    android:text=""
                    android:textSize="16sp" />
            </LinearLayout>

            <View style="@style/view_line" />

            <com.boyuanitsm.echinfo.widget.MineItemView
                android:id="@+id/mivPerson"
                style="@style/productInfo_item"
                app:leftText="法人"
                app:rightText="" />

            <View style="@style/view_line" />

            <com.boyuanitsm.echinfo.widget.MineItemView
                android:id="@+id/mivRegMoney"
                style="@style/productInfo_item"
                app:leftText="注册资本"
                app:rightText="" />

            <View style="@style/view_line" />

            <com.boyuanitsm.echinfo.widget.MineItemView
                android:id="@+id/mivPubTime"
                style="@style/productInfo_item"
                app:leftText="成立时间"
                app:rightText="" />

            <View style="@style/view_line" />

            <com.boyuanitsm.echinfo.widget.MineItemView
                android:id="@+id/mivState"
                style="@style/productInfo_item"
                app:leftText="状态"
                app:rightText="" />

            <View style="@style/view_line" />

            <com.boyuanitsm.echinfo.widget.MineItemView
                android:id="@+id/mivHy"
                style="@style/productInfo_item"
                app:leftText="行业"
                app:rightText="" />

            <View style="@style/view_line" />

            <com.boyuanitsm.echinfo.widget.MineItemView
                android:id="@+id/mivRegNo"
                style="@style/productInfo_item"
                app:leftText="工商注册号"
                app:rightText="" />

            <View style="@style/view_line" />

            <com.boyuanitsm.echinfo.widget.MineItemView
                android:id="@+id/mivType"
                style="@style/productInfo_item"
                app:leftText="企业类型"
                app:rightText="私企" />

            <View style="@style/view_line" />

            <com.boyuanitsm.echinfo.widget.MineItemView
                android:id="@+id/mivRegCode"
                style="@style/productInfo_item"
                app:leftText="组织机构代码"
                app:rightText="" />

            <View style="@style/view_line" />

            <com.boyuanitsm.echinfo.widget.MineItemView
                android:id="@+id/mivManagerDate"
                style="@style/productInfo_item"
                app:leftText="营业期限"
                app:rightText="" />

            <View style="@style/view_line" />

            <com.boyuanitsm.echinfo.widget.MineItemView
                android:id="@+id/mivDejg"
                style="@style/productInfo_item"
                app:leftText="登记机关"
                app:rightText="" />

            <View style="@style/view_line" />

            <com.boyuanitsm.echinfo.widget.MineItemView
                android:id="@+id/mivHzTime"
                style="@style/productInfo_item"
                app:leftText="核准日期"
                app:rightText="" />

            <View style="@style/view_line" />

            <com.boyuanitsm.echinfo.widget.MineItemView
                android:id="@+id/mivXyCode"
                style="@style/productInfo_item"
                app:leftText="统一信用代码"
                app:rightText="" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>