<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_act_layout" />

    <TextView
        style="@style/tv_14_black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="选择信息有误的部分（多选）" />

    <com.boyuanitsm.tools.view.xrecyclerview.XRecyclerView
        android:id="@+id/rcv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingRight="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="15dp"
        android:background="@drawable/et_error_correction"
        android:gravity="top|left"
        android:hint="我们会收集您提交的请求，并在3-5个工作日内回复。"
        android:maxLength="200"
        android:padding="5dp"
        android:textSize="14sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/et_error_correction"
        android:gravity="center_vertical"
        android:hint="请留下您的联系方式"
        android:inputType="number"
        android:lines="1"
        android:maxLength="11"
        android:padding="5dp"
        android:textSize="14sp" />

    <Button
        style="@style/btn_blue"
        android:text="提交纠错信息" />
    <Space
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" />
</LinearLayout>