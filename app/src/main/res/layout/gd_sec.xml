<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="收索范围"
        android:background="#eef1f3"
        android:layout_width="match_parent"
        android:layout_height="35dp" />
    <com.boyuanitsm.tools.view.FlowTag.FlowTagLayout
        android:id="@+id/size_flow_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        ></com.boyuanitsm.tools.view.FlowTag.FlowTagLayout>


    <TextView
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="成立年限"
        android:background="#eef1f3"
        android:layout_width="match_parent"
        android:layout_height="35dp" />
    <com.boyuanitsm.echinfo.widget.MyGridView
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/gv_clnx"
        android:background="@color/white"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:numColumns="4"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.boyuanitsm.echinfo.widget.MyGridView>

    <TextView
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="注册资本"
        android:background="#eef1f3"
        android:layout_width="match_parent"
        android:layout_height="35dp" />
    <com.boyuanitsm.echinfo.widget.MyGridView
        android:layout_marginTop="10dp"
        android:id="@+id/gv_zczb"
        android:background="@color/white"
        android:verticalSpacing="10dp"
        android:numColumns="3"
        android:horizontalSpacing="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.boyuanitsm.echinfo.widget.MyGridView>
<LinearLayout
    android:layout_marginTop="35dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="#333333"
        android:textSize="14sp"
        android:text="已帮您过滤出"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#ff4444"
        android:textSize="14sp"
        android:text="5000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#333333"
        android:textSize="14sp"
        android:text="条数据"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
    
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textSize="16sp"
            android:background="@drawable/blue_btn"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="确定"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:background="@drawable/gray_btn"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="重置"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />


    </LinearLayout>




</LinearLayout>