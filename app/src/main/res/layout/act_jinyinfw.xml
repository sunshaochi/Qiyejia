<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_serch"
        layout="@layout/title_act_layout_search" />
    <!--选择标签按钮布局-->
    <LinearLayout
        android:layout_below="@id/title_serch"
        android:id="@+id/mian_title_sec"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:id="@+id/city_sec"
            style="@style/ll_secter_title">
        <TextView
            android:id="@+id/tv_city"
            style="@style/text_secter_title"
            android:text="全国" />
            <ImageView
                android:id="@+id/iv_city"
                style="@style/iv_secter_title" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/hy_sec"
            style="@style/ll_secter_title">
            <TextView
                android:id="@+id/tv_hy"
                style="@style/text_secter_title"
                android:text="不限行业" />
            <ImageView
                android:id="@+id/iv_hy"
                style="@style/iv_secter_title" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/gd_sec"
            style="@style/ll_secter_title">
            <TextView
                android:id="@+id/tv_gd"
                style="@style/text_secter_title"
                android:text="更多筛选" />
            <ImageView
                android:id="@+id/iv_gd"
                style="@style/iv_secter_title" />
        </LinearLayout>

    </LinearLayout>
    <!--收索结果按钮-->
    <com.boyuanitsm.tools.view.xrecyclerview.XRecyclerView
        android:layout_below="@id/mian_title_sec"
        android:id="@+id/xr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.boyuanitsm.tools.view.xrecyclerview.XRecyclerView>

