<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey_color"
    android:orientation="vertical">

    <include layout="@layout/title_act_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <com.boyuanitsm.echinfo.widget.MineItemView
            android:id="@+id/miv_version"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:isShowLeftImg="false"
            app:leftText="版本更新"
            app:leftTextColor="@color/black"
            app:leftTextSize="16sp" />

        <View
            style="@style/view_line"
            android:layout_marginLeft="15dp" />

        <com.boyuanitsm.echinfo.widget.MineItemView
            android:id="@+id/miv_share"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:isShowLeftImg="false"
            app:leftText="分享"
            app:leftTextColor="@color/black"
            app:leftTextSize="16sp" />

        <View
            style="@style/view_line"
            android:layout_marginLeft="15dp" />

        <com.boyuanitsm.echinfo.widget.MineItemView
            android:id="@+id/miv_exit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:isShowLeftImg="false"
            app:leftText="退出登录"
            app:leftTextColor="@color/black"
            app:leftTextSize="16sp" />

        <View
            style="@style/view_line"
            android:layout_marginLeft="15dp" />
    </LinearLayout>
</LinearLayout>