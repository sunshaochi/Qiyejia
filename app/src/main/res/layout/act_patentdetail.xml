<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/title_act_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="一种宝马发动机"
                android:textColor="#333"
                android:textStyle="bold" />

            <View style="@style/view_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="25dp">

                        <TextView
                            style="@style/tv_14_black_bold"
                            android:text="申请号" />

                        <TextView
                            android:id="@+id/tvSqNo"
                            style="@style/tv_14_gray"
                            android:layout_marginTop="10dp"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:paddingLeft="25dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/tv_14_black_bold"
                            android:text="申请日期" />

                        <TextView
                            android:id="@+id/tvSqDate"
                            style="@style/tv_14_gray"
                            android:layout_marginTop="10dp"
                            android:text="2017-01-05" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="25dp">

                        <TextView
                            style="@style/tv_14_black_bold"
                            android:text="申请公布号" />

                        <TextView
                            android:id="@+id/tvPublishNo"
                            style="@style/tv_14_gray"
                            android:layout_marginTop="10dp"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:paddingLeft="25dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/tv_14_black_bold"
                            android:text="申请公布日" />

                        <TextView
                            android:id="@+id/tvPublishDate"
                            style="@style/tv_14_gray"
                            android:layout_marginTop="10dp"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View style="@style/view_line" />

            <View
                style="@style/view_line"
                android:layout_marginTop="10dp" />

            <com.boyuanitsm.echinfo.widget.MineItemView
                android:id="@+id/mivAgency"
                style="@style/miv_patentDetail_item"
                app:leftText="专利代理机构"
                app:rightText="" />

            <View style="@style/view_line" />

            <com.boyuanitsm.echinfo.widget.MineItemView
                android:id="@+id/mivInventor"
                style="@style/miv_patentDetail_item"
                app:leftText="发明人"
                app:rightText="" />

            <View style="@style/view_line" />

            <com.boyuanitsm.echinfo.widget.MineItemView
                android:id="@+id/mivType"
                style="@style/miv_patentDetail_item"
                app:leftText="专利类型"
                app:rightText="" />

            <View style="@style/view_line" />

            <com.boyuanitsm.echinfo.widget.MineItemView
                android:id="@+id/mivState"
                style="@style/miv_patentDetail_item"
                app:leftText="状态"
                app:rightText="" />

            <View style="@style/view_line" />

            <View
                style="@style/view_line"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="详细信息"
                android:textColor="#333"
                android:textSize="14sp" />

            <View style="@style/view_line" />
            <TextView
                android:id="@+id/tvDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="15dp"
                android:text=""
                android:textColor="#999"
                android:textSize="14sp" />

            <View style="@style/view_line" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>