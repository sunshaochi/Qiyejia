<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@drawable/item_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_lgName"
            style="@style/tv_14_black"
            android:text="人民法院" />

        <TextView
            android:id="@+id/tv_lgNum"
            style="@style/tv_creditInfo_grayItem"
            android:layout_below="@id/tv_lgName"
            android:layout_marginTop="15dp"
            android:text="人民法院" />

        <TextView
            android:id="@+id/tv_lgTime"
            style="@style/tv_creditInfo_grayItem"
            android:layout_below="@id/tv_lgNum"
            android:layout_marginTop="10dp"
            android:text="2017年1月5日" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View style="@style/view_line" />
</LinearLayout>