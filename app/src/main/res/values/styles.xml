<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="view_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line_color</item>

    </style>

    <!--标题样式-->
    <style name="tv_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv_12_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv_12_grey">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tv_grey</item>
    </style>

    <style name="tv_14_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
    </style>
    <!--首页-->
    <style name="linear_main">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="tv_main_btm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/tv_blue_color</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="mine_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="com.boyuanitsm.echinfo:leftTextSize">16sp</item>
    </style>

    <style name="mineAct_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="com.boyuanitsm.echinfo:leftTextSize">16sp</item>
        <item name="com.boyuanitsm.echinfo:leftTextColor">@color/black</item>
        <item name="com.boyuanitsm.echinfo:isShowLeftImg">false</item>
    </style>

    <style name="tv_shareDialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">@drawable/item_back</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ppAnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popu_in</item>
        <item name="android:windowExitAnimation">@anim/popu_out</item>
    </style>

    <style name="btn_blue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/blue_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="executed_item_tv_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="executed_item_tv_gray" parent="executed_item_tv_black">
        <item name="android:textColor">#999999</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="productInfo_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/white</item>
        <item name="com.boyuanitsm.echinfo:leftTextSize">14sp</item>
        <item name="com.boyuanitsm.echinfo:leftTextColor">#333333</item>
        <item name="com.boyuanitsm.echinfo:isShowLeftImg">false</item>
        <item name="com.boyuanitsm.echinfo:rightTextSize">14sp</item>
        <item name="com.boyuanitsm.echinfo:rightTextColor">#999999</item>
        <item name="com.boyuanitsm.echinfo:isShowArrowRight">false</item>
    </style>
</resources>
